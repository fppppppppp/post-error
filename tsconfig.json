{
    "compileOnSave": true,
    "compilerOptions": {
        "baseUrl": "./",
        "outDir": "./dist/out-tsc",
        "sourceMap": true,
        "declaration": true,
        "module": "esNext",
        "moduleResolution": "node",
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "resolveJsonModule": true,
        "importHelpers": true,
        "target": "es2015",
        "downlevelIteration": true,
        "allowJs": true,
        "typeRoots": [
            "node_modules/@types"
        ],
        "lib": [
            "es2018",
            "dom"
        ],
        "paths": {
            "@assets": ["src/assets"],
            "@assets/*": ["src/assets/*"],
            "@config":["src/config"],
            "@config/*":["src/config/*"],
            "@service":["src/service"],
            "@service/*":["src/service/*"],
            "@/*":["src/*"]

        }
    }
}

